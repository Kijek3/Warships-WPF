<Window x:Class="Warships.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Warships"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1100">
        
        <Grid>
                <Canvas Name="Player1" Background="LightYellow" Visibility="Visible" />
                <Canvas Name="Player2" Background="LightYellow" Visibility="Hidden" />
                <Canvas Name="Overlay" Background="Black" Visibility="Hidden" MouseLeftButtonDown="Overlay_OnMouseLeftButtonDown">
                        <TextBlock Name="OverlayText" FontSize="50" FontFamily="Comic Sans MS" Foreground="White"></TextBlock>
                </Canvas>
        </Grid>
</Window>
